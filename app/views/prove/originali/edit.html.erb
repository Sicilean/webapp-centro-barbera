<h1>Editing prova</h1>

<% form_for(@prova) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :matrice_id %><br />
    <%= f.text_field :matrice_id %>
  </p>
  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :nome_esteso %><br />
    <%= f.text_field :nome_esteso %>
  </p>
  <p>
    <%= f.label :metodo_di_prova %><br />
    <%= f.text_field :metodo_di_prova %>
  </p>
  <p>
    <%= f.label :subappalto %><br />
    <%= f.check_box :subappalto %>
  </p>
  <p>
    <%= f.label :prezzo %><br />
    <%= f.text_field :prezzo %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_field :note %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

