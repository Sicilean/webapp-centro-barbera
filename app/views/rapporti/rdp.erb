
<div class="header-section">
  <!-- Intestazione Centro Enochimico Barbera -->
  <div style="text-align: center; margin-bottom: 20px;">
    <img alt="Centro Enochimico Barbera S.r.l." border="0" src="/images/rdp_intestazione.jpg" style="max-width: 100%; width: 70%;" />
    <% if @rapporto.tipologia.sinal %>
      <p style="text-align: center; font-weight: bold; margin-top: 10px;">
        Laboratorio accreditato SINAL n° 0123
      </p>
    <% end %>
  </div>
  
  <div class="spacer-medium"></div>
  
  <div style="text-align: center;">
    <% if @rapporto.numero_supplemento.blank? %>
      <h1>RAPPORTO DI PROVA Nr. <span style ="<%= @style_nascosto_se_stampa_modello_vuoto-%>"><%= @rapporto.numero %></span></h1>
    <% else %>
      <h2>SUPPLEMENTO Nr. <span style ="<%= @style_nascosto_se_stampa_modello_vuoto-%>"><%= @rapporto.numero_supplemento %></span> AL RAPPORTO DI PROVA Nr. <span style ="<%= @style_nascosto_se_stampa_modello_vuoto-%>"><%= @rapporto.numero %></span></h2>
    <% end %>
  </div>
</div>

  <table class="campione_di" >
    <tr  >
      <td style="width: 145px">
        Campione di:
      </td>
      <td  colspan ="2">
        <span style ="<%= @style_nascosto_se_stampa_modello_vuoto-%>"><%= @rapporto.campione.campione_di %></span>
      </td>
    </tr>
    <tr>
      <td >
        RC N.:
      </td>
      <td width= "50px">
        <span style ="<%= @style_nascosto_se_stampa_modello_vuoto-%>"><%= @rapporto.campione.numero %></span>
      </td>
      <td>
        Campionamento:

         <span style ="<%= @style_nascosto_se_stampa_modello_vuoto-%>"><%= @rapporto.campione.campionamento %></span>
      </td>
    </tr>
    <tr>
        <%= "<td>Comune: </td><td><span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.comune} (#{@rapporto.campione.provincia})</span></td>" unless @rapporto.campione.comune.blank? %>
        <%= "<td>Località: <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.località}</span></td>" unless @rapporto.campione.località.blank? %>
    </tr>
    <tr>
        <%= "<td>Coltura: </td><td><span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.tipo_di_coltura}</span></td>" unless @rapporto.campione.tipo_di_coltura.blank? %>
        <%= "<td>Fase Ciclo Colturale: <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.fase_coltura}</span></td>" unless @rapporto.campione.fase_coltura.blank? %>
    </tr>
    <tr>
        <%= "<td>Foglio di Mappa n.</td><td> <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.numero_foglio_di_mappa}</span></td>" unless @rapporto.campione.numero_foglio_di_mappa.blank? %>
        <%= "<td>Particella/e: <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.particelle}</span></td>" unless @rapporto.campione.particelle.blank? %>
    </tr>
    <tr>
        <%= "<td>Superficie Aziendale (Ha): </td><td><span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.ettari}</span></td>" unless @rapporto.campione.ettari.blank? %>
        <%= "<td>Superficie interessata al prelievo (Ha): <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.superficie_di_prelievo}</span></td>" unless @rapporto.campione.superficie_di_prelievo.blank? %>
    </tr>
    <tr>
        <%= "<td>Profondità di prelievo:</td><td> <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{@rapporto.campione.profondita_di_prelievo}</span></td>" unless @rapporto.campione.profondita_di_prelievo.blank? %>
    </tr>
    <tr >
        <%= "<td valign='top'>Etichettatura:</td><td colspan ='2'> <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{trasforma_acapo_in_br @rapporto.campione.etichetta}</span></td>" unless @rapporto.campione.etichetta.blank? %>
    </tr>
     <tr>
        <% etichetta_e_suggello = @rapporto.campione.etichetta.to_s + @rapporto.campione.suggello.to_s %>
        <% linee_vuote = '' %>
        <!-- Salto delle righe vuote nel caso l'etichettatura sia troppo piccola, ovvero ha meno di 3 righe o  se il totale di caratteri e' maggiore di . (migliorabile).-->
        <% (linee_vuote = "<br/><br/><br/>") if !etichetta_e_suggello.nil? && (etichetta_e_suggello.scan(/\n/).size<2 || etichetta_e_suggello.size < 200)  %>
        <!--attenzione: nel seguente si fa comparire "sugello" anche se il campo e' vuoto ma non lo e' l'etichetta: si vuole infatti che 'sugello' compaia anche se vuota per i casi in cui c'e' etichetta -->
        <%= "<td valign='top'>Suggello:#{linee_vuote}</td><td valign='top' colspan ='2'> <span style ='#{@style_nascosto_se_stampa_modello_vuoto}'>#{trasforma_acapo_in_br @rapporto.campione.suggello}</span></td>" unless @rapporto.campione.etichetta.blank? %>
    </tr>
     <tr>
      <td>
        <% if (@rapporto.data_stampa.nil?) || (@rapporto.data_stampa > "13 Jul 2010".to_date) %>
          Committente:
        <% else %>
          Presentato da:
        <% end %>
      </td>
      <td colspan ="2">
        <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
          <%= @rapporto.campione.cliente.denominazione %>
        </span>
      </td>
    </tr>
     <tr>
      <td>
        Indirizzo:
      </td>
      <td colspan ="2">
        <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
        <%= @rapporto.campione.cliente.indirizzo %>, <%= @rapporto.campione.cliente.cap %> <%= @rapporto.campione.cliente.comune %> (<%= @rapporto.campione.cliente.provincia %>)
        </span>
      </td>
    </tr>
     <tr>
      <td>
        Data ricevimento:
      </td>
      <td  colspan ="2">
        <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
          <% unless @rapporto.data_richiesta.nil? %>
            <%= @rapporto.data_richiesta.day %>/<%= @rapporto.data_richiesta.month %>/<%= @rapporto.data_richiesta.year %>
          <% end %>
        </span>
      </td>
    </tr>
     <tr>
      <td>
        Data esecuzione prove:
      </td>
      <td colspan ="2">
        <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
          <% unless @rapporto.data_esecuzione_prove_inizio.nil? %>
            <% if @rapporto.data_esecuzione_prove_fine.nil? || (@rapporto.data_esecuzione_prove_inizio == @rapporto.data_esecuzione_prove_fine) %>
              <%= @rapporto.data_esecuzione_prove_inizio.day %>/<%= @rapporto.data_esecuzione_prove_inizio.month %>/<%= @rapporto.data_esecuzione_prove_inizio.year %>
            <% else %>
              dal <%= @rapporto.data_esecuzione_prove_inizio.day %>/<%= @rapporto.data_esecuzione_prove_inizio.month %>/<%= @rapporto.data_esecuzione_prove_inizio.year %>
              al  <%= @rapporto.data_esecuzione_prove_fine.day %>/<%= @rapporto.data_esecuzione_prove_fine.month %>/<%= @rapporto.data_esecuzione_prove_fine.year %>
            <% end %>
          <% end %>
        </span>
      </td>
    </tr>
  </table>

<div class="results-section no-page-break">
  <h3>RISULTATI DELLE PROVE</h3>
  <% if @prove_totali && !@prove_totali.empty? %>
    <table class="risultati" border ="0" cellpadding="0" cellspacing="0">
      <tr>
        <th >Prova</th>
        <th >Dato</th>
        <th >Unità di<br/>misura</th>
        <%  if @rapporto.tipologia.sinal %>
          <th >Incertezza di<br/>misura (<sup><small>1</small></sup>)</th>
        <% end %>
        <th >Metodo di prova</th>
      </tr>

      <% @prove_totali.each do |@prova| %>
        <% if  @prova.variabili.size > 1 %>
          <tr>
            <td colspan="5">
              <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
                <b><%= @prova.nome_esteso %></b>
              </span>
            </td>
          </tr>
        <% end %>
        <% @prova.variabili.each do |@variabile| %>
          <% @variabile_rapporto_items.each {|variabile_rapporto_item|  @variabile_rapporto_item = variabile_rapporto_item if variabile_rapporto_item.variabile == @variabile } %>
          <tr>
            <td>
              <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
                <%= @variabile_rapporto_item.variabile.nome_esteso %>
              </span>
            </td>
            <td>
              <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
                <%=  @variabile_rapporto_item.valore_automatico %>
              </span>
            </td>

            <td>
              <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
                <%= @variabile_rapporto_item.variabile.unita_di_misura %>
              </span>
            </td>
            <%  if @rapporto.tipologia.sinal %>
              <td>
                <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
                 &#177;<%=  @variabile_rapporto_item.incertezza_di_misura unless @variabile_rapporto_item.incertezza_di_misura.blank? %>
                </span>
              </td>
            <%  end %>

            <td>
              <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
                <%=h "#{@prova.metodo_di_prova}" %>
              </span>
            </td>

          </tr>
        <% end %>
      <% end %>

    </table>
  <% else %>
    <p style="font-style: italic; color: #999; text-align: center; padding: 20px;">
      Nessun risultato disponibile.
    </p>
  <% end %>
</div>

<div class="spacer-medium">
  <% if @rapporto.tipologia.sinal %>
    <p style="font-size: 9px;">
      <sup>(1)</sup> Pareri ed interpretazioni - non oggetto dell'accreditamento SINAL.
    </p>
    <br/>
  <% end %>
  <%= "#{trasforma_acapo_in_br @rapporto.pie_pagina}<br/>" unless @rapporto.pie_pagina.blank? %>
</div>

