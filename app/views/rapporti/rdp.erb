  <table width ="100%" border ="0" cellpadding="0" cellspacing="0">
    <tr>
      <td style ="text-align: left; ">Campobello di Mazara,
        <% unless @rapporto.data_stampa.nil? %>
        <span style ='<%= @style_nascosto_se_stampa_modello_vuoto-%>'>
          <%= @rapporto.data_stampa.day %>/<%= @rapporto.data_stampa.month %>/<%= @rapporto.data_stampa.year %>
        </span>
        <% end %>
      </td>
      <td style ="text-align: center;" width ="40%">
