

<% form_for @user_session, :url => user_sessions_path do |f| %>
  <%= error_messages_for :user_session, :header_message => "Errore" %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Entra' %>
  </p>
<% end %>
