/* Global styles with rails-scaffold's basic css */

/* Default Facebook CSS tratto da http://devtacular.com/articles/bkonrad/how-to-style-an-application-like-facebook/ */
body {
    font-family: "lucida grande" ,tahoma,verdana,arial,sans-serif;
    font-size: 11px;
    color: #333333;
    }
h1, h2, h3, h4, h5 {
  font-size: 16px;
  color: green;
  margin: 0px;
  padding: 0px; }

h1 {
  font-size: 15px; }

h2 {
  font-size: 14px; }

h3 {
  font-size: 13px; }

h4, h5 {
  font-size: 11px;
 color: green;}

p {
  font-family: "lucida grande", tahoma, verdana, arial, sans-serif;
  font-size: 11px;
  text-align: left; }

/* Default Anchor Style */
a {
    color: #3b5998;
    outline-style: none;
    text-decoration: none;
    font-size: 11px;
    font-weight: bold; }
a:hover {
    text-decoration: underline; }

/* menu amministrazione*/
#menu_amministrazione {
  border: 2px solid green;
  padding: 1em;
  margin-right: 15%;
  margin-bottom: 1em;
  background-color: #f0f0f0;
}
/* menu amministrazione in sviluppo*/
#menu_amministrazione_per_localhost {
  margin-bottom: 1em;
}
#flash_notice {
  border: 2px solid green;
  padding: 1em;
  padding-bottom: 1em;
  padding-top: 1em;
  color: green;
  background-color: #f0f0f0;
  margin-right: 30em;
}

#flash_error {
  border: 2px solid red;
  padding: 1em;
  margin-bottom: 2em;
  background-color: #f0f0f0;
  font: bold smaller sans-serif;
}

#nota_light {
color: #999;
font-size: 10px;
}

#mini_elenco_prove{
color: #999;
font-size: 10px;
}
#mini_elenco_prove a {
    outline-style: none;
    text-decoration: none;
    font-size: 10px;
    font-weight: bold; }

#RapportoDiProva {
  width:800px;
  font-family: arial,sans-serif;
  color: black;
  line-height: 10pt;
  margin-left: 2em;
  padding-top: 4ex;
  padding-left: 2em;
  background: white;
}
#RapportoDiProva h1, h2, h3, h4, h5 {
  font-size: 16px;
  color: black;
  margin: 0px;
  padding: 0px;}

#RapportoDiProva h1 {
  font-size: 30px; }

#RapportoDiProva h2 {
  font-size: 24px; }

#RapportoDiProva h3 {
  font-size: 22px; }

#RapportoDiProva h4, h5 {
  font-size: 18px;}


#StampaDati {
  width:600px;
  color: black;
  line-height: 12pt;
  margin-left: 2em;
  padding-top: 2ex;
  padding-left: 2em;
  background: white;
}


